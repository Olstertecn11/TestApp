@model IEnumerable<TestAplication.Models.Data.Colaborador>
  @{
  ViewData["Title"] = "Colaboradores";
  }

  <h2>Colaboradores</h2>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>CUI</th>
        <th>Sucursal</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
      <tr>
        <td>@item.IdColaborador</td>
        <td>@item.Nombre</td>
        <td>@item.CUI</td>
        <td>@item.Sucursal?.Nombre</td>
        <td>
          <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.IdColaborador">Editar</a>
          <form asp-action="Delete" asp-route-id="@item.IdColaborador" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm"
              onclick="return confirm('Â¿Deseas eliminar este colaborador?');">
              Eliminar
            </button>
          </form>
        </td>
      </tr>
      }
    </tbody>
  </table>
